<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/shape_bottom_sheet_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ChangeUpdateHeadImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:text="更 换 头 像"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/popWindowViewLine1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#656565"
        app:layout_constraintTop_toBottomOf="@+id/ChangeUpdateHeadImage"
        />


    <Button
        android:id="@+id/Logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="退 出 登 录"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popWindowViewLine1" />

    <View
        android:id="@+id/popWindowViewLine2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#656565"
        app:layout_constraintTop_toBottomOf="@+id/Logout"
        />

    <Button
        android:id="@+id/ClosePopWindow"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="取消"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popWindowViewLine2" />


</androidx.constraintlayout.widget.ConstraintLayout>